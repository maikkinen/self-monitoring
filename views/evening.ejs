<%- include('./partials/header.ejs') %>
<%- include('./partials/greeting.ejs') %>
<%- include('./partials/menu.ejs') %>
<%- include('./partials/divider-dotted.ejs') %>
<div style="display: flex; flex-direction: column;">

  <h3 style="margin-bottom: 0.5rem;">Evening Reflection</h3>
  <a style="margin-bottom: 3rem; font-size: 0.9rem;" href="/behavior/reporting">Back to Reporting</a>
  <h5>Healthy Habits</h5>
  <form method="POST" action="/behavior/reporting/evening">
    <span>
      <label for="sportsDuration">Excercise & Sports today</label>
      <input type="number" step="0.1" name="sportsDuration" />
    </span>

    <span>
      <label for="studyingDuration">Time Spent Studying</label>
      <input type="number" step="0.1" name="studyDuration" />
    </span>

    <span>
      <label for="eatingQuality">Eating Quality</label>
      <input type="range" min="1" max="5" name="eatingQuality" />
    </span>

    <hr style="border-top: 3px dotted #bbb;">
    <h5>How's Your Mood?</h5>
    <input style="text-align: center;" type="range" min="1" max="5" name="mood" />

    <hr style="border-top: 3px dotted #bbb;">
    <label for="date">Date</label>
    <input style="width: 20rem;" type="date" id="date" name="date" />

    <input style="width:100%;" type="submit" value="Submit" />
  </form>
</div>

<%- include('./partials/footer.ejs') %>