<%- include('./partials/header.ejs') %>
<%- include('./partials/greeting.ejs')%>
<%- include('./partials/menu.ejs') %>
<%- include('./partials/divider-dotted.ejs') %>

<div style="display: flex; flex-direction: column">
  <h3 style="margin-bottom: 0.5rem">Starting the Day</h3>
  <a style="margin-bottom: 3rem; font-size: 0.9rem" href="/behavior/reporting"
    >Back to Reporting</a
  >
  <h5>Sleeping</h5>

  <form method="POST" action="/behavior/reporting/morning">
    <label for="sleepDuration">How long did You sleep?</label>
    <input type="number" name="sleepDuration" step="0.1" min="0" max="24" />
    <% if (errors.sleepDuration) { %> <%
    Object.values(errors.sleepDuration).forEach((err) => { %>
    <p
      style="
        font-size: 0.9rem;
        color: darkred;
        font-weight: bold;
        opacity: 0.9;
        margin: 0.5rem 0rem 1rem 0rem;
      "
    >
      <%= err %>
    </p>
    <% }); %> <% } %>

    <label for="sleepQuality">Feeling on Sleep Quality</label>

    <div style="display: flex; flex-direction: row; padding: 1rem; margin: 0">
      <h6 style="margin-right: 0.5rem">1</h6>
      <input name="sleepQuality" type="range" min="1" max="5" />
      <h6 style="margin-left: 0.5rem">5</h6>
    </div>
    <% if (errors.sleepQuality) { %> <%
    Object.values(errors.sleepQuality).forEach((err) => { %>
    <p
      style="
        font-size: 0.9rem;
        color: darkred;
        font-weight: bold;
        opacity: 0.9;
        margin: 0.5rem 0rem 1rem 0rem;
      "
    >
      <%= err %>
    </p>
    <% }); %> <% } %> <%- include('./partials/moodmeter.ejs') %>

    <hr style="border-top: 3px dotted #bbb" />
    <label for="date">Date</label>
    <input style="width: 20rem" type="date" id="date" name="date" />
    <% if (errors.date) { %> <% Object.values(errors.date).forEach((err) => { %>
    <p style="font-size: 0.9rem; opacity: 0.9; margin: 0.5rem 0rem 1rem 0rem">
      <%= err %>
    </p>
    <% }); %> <% } %>

    <input style="width: 100%" type="submit" value="Submit" />
  </form>
</div>
<%- include('./partials/footer.ejs') %>
